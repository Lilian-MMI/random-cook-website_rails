<!DOCTYPE html>
<html>
<head>
  <title>BackRuby</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'sessions', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<%= render :partial => 'layouts/header', :formats => [:html] %>

<section class="signing-section">
  <div>
    <h1>Sign In</h1>
    
    <%= @error_message %>
    
    <%= form_for(:session, :url => sessions_path) do |f| %>
      <div class="field">
        <%= f.label :email, "Email" %><br />
        <%= f.text_field :email, required: true %>
      </div>
      <div class="field">
        <%= f.label :password, "Password" %><br />
        <%= f.password_field :password, required: true%>
      </div>
      <div class="actions">
        <%= f.submit "Sign in" %>
      </div>
    <% end %>

    <p class="connexion-redirection">not yet registered ? <%= link_to "Sign up !", "/inscription"  %></p>
  </div>
</section>

</body>
</html>


